{
    "compilerOptions": {
        "composite": true,
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "main/**/*.ts*",
        "preload/**/*.ts*"
    ],
    "exclude": [
        "node_modules",
        "renderer"
    ]
}