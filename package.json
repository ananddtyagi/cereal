{
    "name": "cereal",
    "version": "0.0.1",
    "description": "Cereal is a real-time speech transcription and note taking app.",
    "main": "dist/main/index.js",
    "build": {
        "electronPermissions": [
            "microphone",
            "screen"
        ]
    },
    "scripts": {
        "dev": "concurrently \"cd renderer && next dev\" \"wait-on http://localhost:3000 && tsc -p tsconfig.node.json && electronmon .\"",
        "build": "next build renderer && tsc -p tsconfig.node.json",
        "start": "electron .",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0",
        "next": "^14.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.2.0",
        "@electron-forge/maker-deb": "^7.2.0",
        "@electron-forge/maker-rpm": "^7.2.0",
        "@electron-forge/maker-squirrel": "^7.2.0",
        "@electron-forge/maker-zip": "^7.2.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electronmon": "^2.0.2",
        "typescript": "^5.0.0",
        "wait-on": "^7.2.0"
    }
}