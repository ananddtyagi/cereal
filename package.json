{
    "name": "cereal",
    "version": "0.0.1",
    "description": "Cereal is a real-time speech transcription and note taking app.",
    "main": "dist/main/index.js",
    "build": {
        "electronPermissions": [
            "microphone",
            "screen"
        ]
    },
    "scripts": {
        "dev:renderer": "cd renderer && next dev",
        "dev:electron": "wait-on tcp:3000 && npm run build:electron && electronmon .",
        "dev": "concurrently -n=next,electron \"npm run dev:renderer\" \"npm run dev:electron\"",
        "build": "next build renderer && npm run build:electron",
        "build:electron": "tsc -p tsconfig.node.json",
        "start": "electron .",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "dependencies": {
        "@radix-ui/react-dialog": "^1.1.4",
        "@types/fluent-ffmpeg": "^2.1.27",
        "@types/form-data": "^2.5.2",
        "@types/node-fetch": "^2.6.11",
        "@types/uuid": "^10.0.0",
        "child_process": "^1.0.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "copy-webpack-plugin": "^12.0.2",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "form-data": "^4.0.1",
        "lucide-react": "^0.469.0",
        "next": "^14.0.0",
        "node-fetch": "^2.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "shadcn-ui": "^0.9.4",
        "tailwind-merge": "^2.6.0",
        "tailwindcss-animate": "^1.0.7",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.2.0",
        "@electron-forge/maker-deb": "^7.2.0",
        "@electron-forge/maker-rpm": "^7.2.0",
        "@electron-forge/maker-squirrel": "^7.2.0",
        "@electron-forge/maker-zip": "^7.2.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electronmon": "^2.0.2",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.5.1",
        "typescript": "^5.0.0",
        "wait-on": "^7.2.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    }
}
