{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "renderer/*"
            ]
        },
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "renderer/**/*.ts",
        "renderer/**/*.tsx",
        ".next/types/**/*.ts",
        "main/**/*.ts",
        "main/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
    ],
    "references": [
        {
            "path": "tsconfig.node.json"
        }
    ]
}